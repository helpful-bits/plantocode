# Reddit Ads API Configuration
# Copy this file to .env and fill in your actual values

# Reddit App Credentials
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_REDIRECT_URI=http://localhost:8080/callback
REDDIT_USERNAME=your_reddit_username

# App Info
APP_NAME=VibeManagerAds
APP_VERSION=1.0

# OAuth Tokens (will be populated after authentication)
REDDIT_ACCESS_TOKEN=
REDDIT_REFRESH_TOKEN=

# Business/Account IDs (will be populated after initial setup)
REDDIT_BUSINESS_ID=
REDDIT_AD_ACCOUNT_ID=

# API Settings
REDDIT_API_BASE_URL=https://ads-api.reddit.com/api/v3
REDDIT_OAUTH_BASE_URL=https://www.reddit.com/api/v1

# OAuth Scopes (comma-separated)
REDDIT_SCOPES=adsread,adsedit,adsconversions