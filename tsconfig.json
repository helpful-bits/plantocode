{
  "compilerOptions": {
    "lib": [
      "dom", // Keep dom library
      "dom.iterable",
      "esnext" // Keep esnext library
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ] // Keep paths alias
    }, // Keep paths alias
    "target": "ES2017", // Keep target
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true // Added for stricter type checking
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} // Keep tsconfig structure
