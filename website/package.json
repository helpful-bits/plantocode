    "@radix-ui/react-slot": "1.2.3",
    "@types/js-cookie": "^3.0.6",
    "class-variance-authority": "0.7.1",
    "d3": "^7.9.0",
    "framer-motion": "^11.18.2",
    "fuse.js": "^7.1.0",
    "js-cookie": "^3.0.5",
    "lenis": "1.3.8",
