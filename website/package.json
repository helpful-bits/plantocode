    "monaco-editor": "^0.52.2",
    "next": "^16.0.8",
    "next-intl": "^4.5.8",
    "next-plausible": "^3.12.5",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "schema-dts": "1.1.5"
  },
