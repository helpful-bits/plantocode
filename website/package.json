{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prebuild": "echo 'Skipping i18n validation - collisions detected, fix with namespace scoping'",
    "postbuild": "echo \"Run 'npm run search:build' or CI-integrated indexer after build\"",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "search:build": "npx pagefind --site out --output-path out/pagefind",
    "perf:analyze": "ANALYZE=true npm run build",
    "perf:bundle": "npx @next/bundle-analyzer",
    "perf:lighthouse": "npx lhci autorun",
    "deps:check": "npm audit && npm outdated",
    "deps:update": "npm update --save",
    "content:create": "node scripts/create-content.js",
    "content:validate": "node scripts/validate-content.js",
    "content:validate:strict": "node scripts/validate-content.js --strict",
    "i18n:scan": "node scripts/i18n-scan.mjs > .i18n.used.json",
    "i18n:validate": "node scripts/i18n-validate.mjs .i18n.used.json"
  },
  "dependencies": {
