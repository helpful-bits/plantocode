# Application settings
APP_NAME=vibe-manager
ENVIRONMENT=development

# Server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
SERVER_URL=http://localhost:8080
APP_DEEP_LINK_SCHEME=vibe-manager

# Database settings
DATABASE_URL=postgres://postgres:password@localhost:5432/vibe_manager

# Authentication settings
JWT_SECRET=replace_this_with_a_very_long_and_secure_random_string_at_least_32_chars
JWT_ACCESS_TOKEN_DURATION_DAYS=30

# Firebase settings
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# AI API keys
GEMINI_API_KEY=your_gemini_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GROQ_API_KEY=your_groq_api_key
OPENROUTER_API_KEY=your_openrouter_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Stripe Integration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Subscription Defaults
DEFAULT_TRIAL_DAYS=7