{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noWarnOnMultipleProjects": true
  },
  "include": ["scripts/**/*"]
}