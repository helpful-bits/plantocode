# InterServer-specific secrets
# Copy this to secrets.yml and fill in your actual values, then encrypt with:
# ansible-vault encrypt group_vars/interserver/secrets.yml --vault-password-file .vault_pass

# Stripe Webhook Secret for InterServer deployment
# This should be the webhook signing secret from your Stripe dashboard
# for the webhook endpoint: https://api-us.plantocode.com/webhooks/stripe
stripe_webhook_secret_interserver: "whsec_YOUR_INTERSERVER_STRIPE_WEBHOOK_SECRET"

# Website Deployment Configuration (Nginx + Let's Encrypt + Cloudflare)
# These secrets are used for the website deployment on InterServer
website_env_vars:
  # Cloudflare DNS API Token for Let's Encrypt DNS-01 Challenge
  # Create at https://dash.cloudflare.com/profile/api-tokens
  # Required permissions: Zone:Zone:Read, Zone:DNS:Edit
  # Zone Resources: Include:Specific zone:plantocode.com
  CF_DNS_API_TOKEN: "YOUR_CLOUDFLARE_DNS_API_TOKEN"
  
  # Next.js Production Environment
  NODE_ENV: "production"
  
  # Analytics Configuration (Optional)
  # Plausible Analytics
  NEXT_PUBLIC_PLAUSIBLE_DOMAIN: "yourdomain.com"
  PLAUSIBLE_DEBUG: "false"
  NEXT_PUBLIC_TRACK_DEV: "false"
  
  # Google Analytics
  NEXT_PUBLIC_GA_MEASUREMENT_ID: "G-YOUR_GA_ID"
  GA_MEASUREMENT_ID: "G-YOUR_GA_ID"
  GA_API_SECRET: "YOUR_GA_API_SECRET"
  
  # X/Twitter Pixel - Server-side Implementation
  NEXT_PUBLIC_X_PIXEL_ID: "YOUR_X_PIXEL_ID"
  NEXT_PUBLIC_X_DOWNLOAD_EVENT_ID: "YOUR_X_DOWNLOAD_EVENT_ID"

  # X Ads API OAuth 1.0a Credentials (for server-side Conversion API)
  # Required for cookie-free tracking that bypasses ad blockers
  # Get from: X Developer Portal → Apps → Keys and tokens
  X_ADS_API_KEY: "YOUR_CONSUMER_KEY"
  X_ADS_API_SECRET: "YOUR_CONSUMER_SECRET"
  X_ADS_ACCESS_TOKEN: "YOUR_ACCESS_TOKEN"
  X_ADS_ACCESS_TOKEN_SECRET: "YOUR_ACCESS_TOKEN_SECRET"
  
  # CloudFront CDN for downloads
  NEXT_PUBLIC_CLOUDFRONT_URL: "https://your-cdn.cloudfront.net"
  NEXT_PUBLIC_MEDIA_CDN_BASE: "https://your-cdn.cloudfront.net"
  NEXT_PUBLIC_MAC_DOWNLOAD_URL: "https://your-cdn.cloudfront.net/desktop/mac/stable/latest.dmg"
  
  # Application URLs
  NEXT_PUBLIC_APP_URL: "https://www.yourdomain.com"
  NEXT_PUBLIC_API_URL: "https://api.yourdomain.com"