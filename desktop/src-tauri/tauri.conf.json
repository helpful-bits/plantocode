{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.vibe-manager.app",
  "productName": "Vibe Manager",
  "version": "0.1.0",

  "build": {
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev"
  },

  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": "default-src 'self'; object-src 'none'; base-uri 'none'; connect-src 'self' https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://do.featurebase.app; script-src 'self' 'unsafe-inline' https://*.googleapis.com https://*.gstatic.com https://do.featurebase.app; frame-src 'self' https:; font-src 'self' https://fonts.gstatic.com;",
      "capabilities": ["default", "featurebase"]
    },
    "windows": [
      {
        "label": "main",
        "title": "Vibe Manager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": []
    }
  },

  "plugins": {
    "http": null,
    "dialog": null,
    "shell": {}
  }
}
