{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "app.plantocode",
  "productName": "PlanToCode",
  "version": "1.2.0",

  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev"
  },

  "app": {
    "macOSPrivateApi": false,
    "withGlobalTauri": false,
    "security": {
      "csp": "default-src 'self' blob:; object-src 'none'; base-uri 'none'; connect-src 'self' ipc: http://ipc.localhost https: https://plausible.io; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://do.featurebase.app; script-src 'self' 'unsafe-inline' https://*.googleapis.com https://*.gstatic.com https://do.featurebase.app https://plausible.io; frame-src 'self' https:; font-src 'self' data: https://fonts.gstatic.com; img-src 'self' asset: http://asset.localhost; media-src 'self' asset: http://asset.localhost; worker-src 'self' blob:; child-src 'self' blob:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$DOCUMENT/**", "$CACHE/**", "$DATA/**"]
      },
      "capabilities": ["default", "desktop-default", "featurebase", "vibe-api"]
    },
    "windows": [
      {
        "label": "main",
        "title": "PlanToCode",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },

  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["app", "dmg", "msi", "nsis"],
    "category": "Productivity",
    "shortDescription": "PlanToCode - AI-powered development workflow manager",
    "longDescription": "PlanToCode is a comprehensive development tool that helps you manage complex coding tasks, streamline workflows, and boost productivity with AI-powered features.",
    "copyright": "Copyright Â© 2025 helpful bits GmbH",
    "licenseFile": "../LICENSE",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "migrations/**/*",
      "src/jobs/workflow_definitions/*.json"
    ],
    "externalBin": [],
    "iOS": {
      "developmentTeam": "P2C2NH989N",
      "bundleVersion": "100"
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "localhost",
      "signingIdentity": "Developer ID Application: helpful bits GmbH (P2C2NH989N)",
      "providerShortName": null,
      "entitlements": "./Entitlements.plist",
      "frameworks": []
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "wix": {
        "language": ["en-US"]
      },
      "nsis": {
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    }
  },

  "plugins": {
    "http": null,
    "dialog": null,
    "shell": {},
    "updater": {
      "endpoints": [
        "https://d2tyb0wucqqf48.cloudfront.net/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVFNDJBM0E0QzE4RUJENTAKUldSUXZZN0JwS05DN21HSHVQV0JsdVRERXVEYXRkUlZaTld6Q0pnQys2Szl6c3hhK3hwWk5rWGwK"
    }
  }
}
