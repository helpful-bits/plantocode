{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.vibe-manager.app",
  "productName": "Vibe Manager",
  "version": "0.1.0",

  "build": {
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev"
  },

  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "windows": [
      {
        "label": "main",
        "title": "Vibe Manager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },

  "plugins": {
    "http": null,
    "deep-link": {
      "domains": ["vibe-manager.app", "localhost"],
      "customProtocol": "vibe-manager"
    },
    "stronghold": null,
    "dialog": null
  }
}
