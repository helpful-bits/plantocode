<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Sandbox is DISABLED for full file system access -->
    <!-- Database will be in ~/Library/Application Support/com.vibemgr.app/... -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Hardened Runtime Entitlements (for notarization) -->
    
    <!-- Allow JIT (required for JavaScript engines and WebView) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory (required for some operations) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Disable library validation to allow loading of third-party code -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow DYLD Environment Variables (for development) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- Device Access (for Hardened Runtime) -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Sandbox-specific entitlements -->
    <!-- Network Access (required for API calls) -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- File Access (for user-selected files) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Microphone access (sandbox version) -->
    <key>com.apple.security.device.microphone</key>
    <true/>
    
    <!-- Required for shell commands execution in sandbox -->
    <key>com.apple.security.inherit</key>
    <true/>
    
    <!-- Security-scoped bookmarks for persistent file access -->
    <key>com.apple.security.files.bookmarks.app-scope</key>
    <true/>
</dict>
</plist>