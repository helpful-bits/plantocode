{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.plantocode",
  "productName": "PlanToCode",
  "version": "1.2.11",

  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev"
  },

  "app": {
    "macOSPrivateApi": false,
    "withGlobalTauri": false,
    "security": {
      "csp": "default-src 'self' blob:; object-src 'none'; base-uri 'none'; connect-src 'self' ipc: http://ipc.localhost https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self' 'unsafe-inline' https://*.googleapis.com https://*.gstatic.com; frame-src 'self' https:; font-src 'self' data: https://fonts.gstatic.com; img-src 'self' asset: http://asset.localhost; media-src 'self' asset: http://asset.localhost; worker-src 'self' blob:; child-src 'self' blob:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$DOCUMENT/**", "$CACHE/**", "$DATA/**"]
      },
      "capabilities": ["default", "desktop-default", "plantocode-api", "windows-capability"]
    },
    "windows": [
      {
        "label": "main",
        "title": "PlanToCode",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },

  "bundle": {
    "active": true,
    "createUpdaterArtifacts": false,
    "targets": ["nsis"],
    "category": "Productivity",
    "shortDescription": "PlanToCode - AI-powered development workflow manager",
    "longDescription": "PlanToCode is a comprehensive development tool that helps you manage complex coding tasks, streamline workflows, and boost productivity with AI-powered features.",
    "copyright": "Copyright Â© 2025 helpful bits GmbH",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "migrations/**/*",
      "src/jobs/workflow_definitions/*.json",
      "icons/tray/*"
    ],
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": ["en-US"],
        "upgradeCode": "083a7c22-5a19-4b81-9726-10d90f077d74"
      }
    }
  },

  "plugins": {
    "http": null,
    "dialog": null,
    "shell": {}
  }
}