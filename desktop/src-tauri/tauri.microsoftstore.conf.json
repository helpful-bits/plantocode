{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "app.vibemanager",
  "productName": "Vibe Manager",
  "version": "1.0.0",

  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev"
  },

  "app": {
    "macOSPrivateApi": false,
    "withGlobalTauri": false,
    "security": {
      "csp": "default-src 'self' blob:; object-src 'none'; base-uri 'none'; connect-src 'self' https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://do.featurebase.app; script-src 'self' 'unsafe-inline' https://*.googleapis.com https://*.gstatic.com https://do.featurebase.app; frame-src 'self' https:; font-src 'self' https://fonts.gstatic.com; img-src 'self' asset: http://asset.localhost; media-src 'self' asset: http://asset.localhost;",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      },
      "capabilities": ["default", "featurebase", "vibe-api"]
    },
    "windows": [
      {
        "label": "main",
        "title": "Vibe Manager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },

  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["msi"],
    "category": "Productivity",
    "shortDescription": "Vibe Manager - AI-powered productivity and content management",
    "longDescription": "Vibe Manager is a comprehensive productivity application that helps you manage content, streamline workflows, and boost productivity with AI-powered features.",
    "copyright": "Copyright Â© 2025 helpful bits GmbH",
    "licenseFile": "../LICENSE",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "wix": {
        "language": ["en-US"],
        "upgradeCode": "YOUR-UPGRADE-CODE-HERE"
      }
    }
  },

  "plugins": {
    "http": null,
    "dialog": null,
    "shell": {},
    "updater": {
      "endpoints": [
        "https://s3.eu-central-1.amazonaws.com/vibemanager.app/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVFNDJBM0E0QzE4RUJENTAKUldSUXZZN0JwS05DN21HSHVQV0JsdVRERXVEYXRkUlZaTld6Q0pnQys2Szl6c3hhK3hwWk5rWGwK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}