{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for main window",
  "windows": ["main", "overlay"],
  "permissions": [
    "core:default",
    "http:default",
    "http:allow-fetch",
    "http:allow-fetch-read-body",
    "http:allow-fetch-send",
    "dialog:default",
    "fs:default",
    "shell:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "claude-cmd",
          "cmd": "claude",
          "args": true,
          "sidecar": false
        }
      ]
    },
    "shell:allow-open",
    "store:default"
  ]
}
