{
  "name": "plantocode-desktop",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite --config src/vite.config.mts",
    "desktop:check": "cd src-tauri && cargo check --message-format=json | jq -r 'select(.reason == \"compiler-message\" and .message.level == \"error\") | .message.rendered // .message.message' > gen/cargo-check.log && echo 'file desktop/src-tauri/gen/cargo-check.log created'",
    "build": "vite build --config src/vite.config.mts",
    "preview": "vite preview --config src/vite.config.mts",
    "tauri": "tauri",
    "tauri:dev": "bash -c 'mkdir -p src-tauri/gen && tauri dev 2>&1 | tee src-tauri/gen/tauri-dev.log'",
    "desktop:run": "bash -c 'mkdir -p src-tauri/gen && cd src-tauri && cargo run 2>&1 | tee gen/tauri-dev.log'",
    "tauri:build": "tauri build",
    "tauri:build:universal": "tauri build --bundles app,dmg --target universal-apple-darwin",
    "tauri:build:arm64": "tauri build --bundles app,dmg --target aarch64-apple-darwin",
    "tauri:build:x64": "tauri build --bundles app,dmg --target x86_64-apple-darwin",
    "tauri:build:win:msi": "tauri build --bundles msi --target x86_64-pc-windows-msvc",
    "tauri:build:win:nsis:store": "tauri build --bundles nsis --target x86_64-pc-windows-msvc --config src-tauri/tauri.microsoftstore.conf.json",
    "tauri:build:win:msi:store": "tauri build --bundles msi --target x86_64-pc-windows-msvc --config src-tauri/tauri.microsoftstore.conf.json",
    "msix:build": "powershell -ExecutionPolicy Bypass -File scripts/msix/build-msix.ps1 -Version 1.0.21.0",
    "msix:verify": "powershell -ExecutionPolicy Bypass -File scripts/msix/verify-msix.ps1",
    "msix:build:store": "pnpm build && cd src-tauri && cargo build --release --target x86_64-pc-windows-msvc && cd .. && pnpm msix:build",
    "tauri:ios:init": "tauri ios init --config src-tauri/tauri.mobile.conf.json",
    "tauri:ios:dev": "tauri ios dev --config src-tauri/tauri.mobile.conf.json",
    "tauri:ios:build": "tauri ios build --config src-tauri/tauri.mobile.conf.json --export-method app-store-connect",
    "install:all": "pnpm install && pnpm -C ../core install",
    "typecheck": "tsc --noEmit -p ./src/tsconfig.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "NODE_OPTIONS=--max-old-space-size=60000 eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:all": "eslint src/ --ext .js,.jsx,.ts,.tsx && tsc --noEmit -p src/tsconfig.json",
    "lint:security": "eslint . --ext .js,.jsx,.ts,.tsx --config eslint.security.config.mjs",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,html,css,scss,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,html,css,scss,yaml,yml}\"",
    "check:all": "pnpm typecheck && pnpm lint && pnpm format:check",
    "prepare": "husky"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@stripe/react-stripe-js": "^3.10.0",
    "@stripe/stripe-js": "^7.9.0",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-dialog": "^2.4.0",
    "@tauri-apps/plugin-fs": "^2.4.2",
    "@tauri-apps/plugin-os": "^2.3.1",
    "@tauri-apps/plugin-process": "^2.3.0",
    "@tauri-apps/plugin-shell": "^2.3.1",
    "@tauri-apps/plugin-store": "^2.4.0",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.511.0",
    "monaco-editor": "^0.52.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "react-window": "^1.8.11",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@tailwindcss/vite": "^4.1.15",
    "@tauri-apps/cli": "^2.9.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css,scss,yaml,yml}": [
      "prettier --write"
    ]
  }
}
